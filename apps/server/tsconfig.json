{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "paths": {
      "@api/*": [
        "./src/@api/*"
      ],
      "@customers/*": [
        "./src/@customers/*"
      ],
      "@restaurants/*": [
        "./src/@restaurants/*"
      ]
    },
    "outDir": "./build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}